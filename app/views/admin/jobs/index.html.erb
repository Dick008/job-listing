<div class="pull-right">
  <%= link_to("新增工作",new_job_path, :class => "btn btn-default")%>
</div>
<table class="table table-boldered">
  <thead>
   <tr>
     <th>职位</th>
     <th>简历数量</th>
     <th>薪资上限</th>
     <th>薪资下限</th>
     <th>管理选项</th>
     <th>刊登时间</th>
   </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= render_job_status(job)%>
        <%= link_to(job.title, job_path(job))%></td>
      <td><%= link_to(job.resumes.count, admin_job_resumes_path(job))%></td>
      <td><%= job.wage_upper_bound %></td>
      <td><%= job.wage_lower_bound %></td>
      <td>
        <%= link_to("编辑", edit_admin_job_path(job))%>
        <%= link_to("删除", admin_job_path(job), method: :delete, :data => {:confirm => "确定删除吗？"})%>

        <% if job.is_hidden %>
          <%= link_to("显示",publish_admin_job_path(job), method: :post, class: "btn btn-xs btn-default")%>
        <% else %>
          <%= link_to("隐藏",hide_admin_job_path(job), method: :post, class: "btn btn-xs btn-default")%>
        <% end %>
      </td>
      <td><%= job.created_at%></td>
    </tr>
    <% end %>
  </tbody>
</table>
